<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/btAdd"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/space8"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/inputSubject" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:id="@+id/btCancel"
        android:layout_alignTop="@+id/btAdd"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/space8"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputSubject"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:layout_alignEnd="@+id/btAdd"
        android:layout_alignStart="@+id/btCancel"
        android:paddingLeft="10dp" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/inputSubject"
        android:layout_centerHorizontal="true"
        android:id="@+id/space8" />
</RelativeLayout>